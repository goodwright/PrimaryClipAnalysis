nextflow_pipeline {

    name "only_trimming_fastq_trimming"
    script "main.nf"

    test("run_test") {
        when {
            params {
                outdir = "$outputDir"
                only_trimming = true
                skip_trimming = true
            }
        }

        then {
            assert workflow.success

            assert new File("$outputDir/01_prealign/pre_trim_fastqc/sample_1_R1_ultraplex_demux_iCLIP_SmB_Cal51_NSsiRNA_20130808_LUc21_5_fastqc.zip").exists()
            assert path("$outputDir/01_prealign/pre_trim_fastqc/sample_1_R1_ultraplex_demux_iCLIP_SmB_Cal51_NSsiRNA_20130808_LUc21_5_fastqc.zip").md5 == "b3e59741e478a8342cace676ff838be1"

            assert new File("$outputDir/01_prealign/post_trim_fastqc/sample_1_R1_trimmed_fastqc.zip").exists()
            assert path("$outputDir/01_prealign/post_trim_fastqc/sample_1_R1_trimmed_fastqc.zip").md5 == "8811e13ef074c8867b6e2eeb2c3ea2b5"

            assert !(new File("$outputDir/01_prealign/trimgalore/sample_1_R1.fastq.gz_trimming_report.txt").exists())
        }
    }
}
