nextflow_pipeline {

    name "only_input_samplesheet_single-pe"
    script "main.nf"

    test("run_test") {
        when {
            params {
                outdir = "$outputDir"
                only_input = true
                samplesheet = './tests/data/samplesheets/small-dual-sample-se.csv'
            }
        }

        then {
            assert workflow.success

            assert new File("$outputDir/pipeline_info/samplesheet.valid.csv").exists()
            assert path("$outputDir/pipeline_info/samplesheet.valid.csv").md5 == "12b2be3425cd9d9e84ea0ef9f34d1577"
        }
    }
}
