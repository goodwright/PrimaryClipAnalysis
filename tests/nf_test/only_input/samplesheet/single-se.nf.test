nextflow_pipeline {

    name "only_input_samplesheet_single-se"
    script "main.nf"

    test("run_test") {
        when {
            params {
                outdir = "$outputDir"
                only_input = true
                samplesheet = './tests/data/samplesheets/small-single-sample-se.csv'
            }
        }

        then {
            assert workflow.success

            assert new File("$outputDir/pipeline_info/samplesheet.valid.csv").exists()
            assert path("$outputDir/pipeline_info/samplesheet.valid.csv").md5 == "1fdf39c6aba5a799135902c87dd70f6f"
        }
    }
}
