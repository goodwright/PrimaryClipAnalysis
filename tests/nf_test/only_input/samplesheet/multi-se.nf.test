nextflow_pipeline {

    name "only_input_samplesheet_single-se"
    script "main.nf"

    // Test with a single comparison
    test("run_test") {
        when {
            params {
                outdir = "$outputDir"
                only_input = true
                samplesheet = './tests/data/samplesheets/full-all-sample-se.csv'
            }
        }

        then {
            // Test results
            assert workflow.success

            assert new File(".nf-test/tests/e0afb62d4a29dc80d58e7e32020c9276/output/pipeline_info/samplesheet.valid.csv").exists()
            assert path(".nf-test/tests/e0afb62d4a29dc80d58e7e32020c9276/output/pipeline_info/samplesheet.valid.csv").md5 == "0293f9a7be52aff5e8e50ea5329ea01c"
        }
    }
}